<%= form_for @user do |f| %>
 
  <p>
    <%= f.label :fname, "First Name" %><br>
    <%= f.text_field :fname %>
  </p>
 
  <p>
    <%= f.label :lname, "Last Name" %><br>
    <%= f.text_field :lname %>
  </p>

  <p>
    <%= f.label :email, "Email"%><br>
    <%= f.text_field :email%>
  </p>

  <p>
    <%= f.label :dob, "Date of Birth" %><br>
    <%= f.datetime_field("dob") %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_area :phone %>
  </p>

  <p>
    <%= f.label :addr %><br>
    <%= f.text_area :addr %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>