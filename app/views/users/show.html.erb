<div class="container">
  <div class="row">
    <h1> User Data </h1>
    <p> 
      <strong>First Name:</strong>
      <%= @user.fname %>
    </p>

    <p> 
      <strong>Last Name:</strong>
      <%= @user.lname %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Phone number:</strong>
      <%= @user.phone %>
    </p>

    <p>     
      <strong>Address:</strong>
      <%= @user.addr %>
    </p>
    <%= link_to 'Edit user', edit_user_path, {:class=>"btn btn-theme"} %>
  </div>
</div>
