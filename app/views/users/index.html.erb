<div class="container">
  <div class="row">
    <h1>Users</h1>
    <%= link_to 'Signup as a new user', new_user_path, {:class=>"btn btn-theme"} %>
    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th colspan="6"></th>
      </tr>
     
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.fname %></td>
          <td><%= user.lname %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user_path(user),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


