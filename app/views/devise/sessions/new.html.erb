
<div class="text-center">
  <h2>Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %><br>
    <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %><br>

    <%= f.submit "Log in", class: 'btn btn-primary btn-large form-control' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
