<%= form_for @tournament do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :start_datetime, "Start Time"%><br>
    <%= f.datetime_field("start_datetime") %>
  </p>

  <p>
    <%= f.label :end_datetime, "Until" %><br>
    <%= f.datetime_field("end_datetime") %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :player_limit %><br>
    <%= f.number_field :player_limit %>
  </p> 

  <p>
    <%= f.submit %>
  </p>
 
<% end %>